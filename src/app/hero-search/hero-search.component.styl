.search-result
  li
    border-bottom 1px solid grey
    border-left 1px solid grey
    border-right 1px solid grey
    width 195px
    height 16px
    padding 5px
    background-color white
    cursor pointer
    list-style-type none

    &:hover
      background-color #607d8b

    a
      color #888
      display block
      text-decoration none

      &:hover
        color white

      &:active
        color white

#search-box
  width 200px
  height 20px

ul
  &.search-result
    margin-top 0 
    padding-left 0